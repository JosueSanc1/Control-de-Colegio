<!-- views/reporte.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte de Pagos</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>

<body>
    <h1>Reporte de Pagos</h1>

    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Nombre del Alumno</th>
                <th>Método de Pago</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>
            <% pagos.forEach(pago => { %>
                <tr>
                    <td><%= pago.fecha ? pago.fecha.toLocaleDateString() : 'N/A' %></td>
                    <td><%= pago.nombreAlumno ? pago.nombreAlumno : 'N/A' %></td>
                    <td><%= pago.metodoPago ? pago.metodoPago : 'N/A' %></td>
                    <td><%= pago.abono !== undefined ? '$' + pago.abono.toFixed(2) : 'N/A' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <script>
        // Función para formatear la fecha (puedes ajustarla según tus necesidades)
        function formatoFecha(fecha) {
            const options = { year: 'numeric', month: 'numeric', day: 'numeric' };
            return new Date(fecha).toLocaleDateString(undefined, options);
        }
    </script>
</body>

</html>
